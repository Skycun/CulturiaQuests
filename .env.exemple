# ============================================================
# CulturiaQuests - Environment Configuration
# ============================================================
# IMPORTANT: Copy this file to .env and modify the values
# NEVER commit your .env file - it contains secrets!
# For production, regenerate ALL secrets below
# ============================================================

# --- CONFIGURATION BASE DE DONNEES (Postgres) ---
POSTGRES_DB=strapi
POSTGRES_USER=strapi
POSTGRES_PASSWORD=strapi
POSTGRES_PORT=5432

# ==============================================
# CONFIGURATION STRAPI (Backend)
# ==============================================
HOST=0.0.0.0
PORT=1337

# Clés de sécurité - REGENERATE THESE FOR PRODUCTION!
# Generate with: openssl rand -base64 32
# Strapi a besoin de ces 4 clés pour signer les cookies et les sessions
APP_KEYS=changeMe1==,changeMe2==,changeMe3==,changeMe4==

# Pour sécuriser les tokens API
API_TOKEN_SALT=changeMeApiTokenSalt==
# Pour le panel admin
ADMIN_JWT_SECRET=changeMeAdminJwtSecret==
# Pour les transferts de données
TRANSFER_TOKEN_SALT=changeMeTransferTokenSalt==

# Le secret pour les utilisateurs finaux (login front-end)
JWT_SECRET=changeMeJwtSecret==

# OpenAI API Key (pour la génération des questions du quiz)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# CONFIGURATION NUXT (Frontend)
# ==============================================
NUXT_PORT=3000

# URL publique (celle utilisée par le navigateur du client)
# Elle pointe vers localhost car le navigateur est hors du Docker
NUXT_PUBLIC_API_URL=http://localhost:1337

# Autoriser l'accès depuis un ordinateur (pour le debug)
# Mettre à 'true' pour désactiver la vérification mobile-only
NUXT_PUBLIC_ALLOW_DESKTOP=false
